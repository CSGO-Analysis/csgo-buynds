<div class="row">
    <div class="col-sm-12">
        <div class="mkg panel panel-primary">
            <div class="panel-heading">
                <h4>Multi-Key Generator</h4>
            </div>
            <div class="panel-body">
                <form id="mkgForm" name="mkgForm" class="form-horizontal">
                    <fieldset>
                        <legend>Bind Options</legend>
                        <div class="form-group">
                            <label class="control-label col-lg-4 col-sm-3 col-xs-12">Numeric Keypad</label>
                            <div class="col-lg-4 col-sm-6 col-xs-12">
                                <div class="keypad">
                                    <div class="key">
                                        <button class="btn btn-default" type="button" ng-click="openKeyBindOptionsModal('kp_minus')">-</button>
                                    </div>
                                    <div class="key">
                                        <button class="btn btn-default" type="button" ng-click="openKeyBindOptionsModal('kp_multiply')">*</button>
                                    </div>
                                    <div class="key">
                                        <button class="btn btn-default" type="button" ng-click="openKeyBindOptionsModal('kp_slash')">/</button>
                                    </div>
                                    <div class="key">
                                        <button class="btn btn-default" type="button" disabled>Num<br/>Lock</button>
                                    </div>
                                    <div class="key tall-key">
                                        <button class="btn btn-default" type="button" ng-click="openKeyBindOptionsModal('kp_plus')">+</button>
                                    </div>
                                    <div class="key">
                                        <button class="btn btn-default" type="button" ng-click="openKeyBindOptionsModal('kp_pgup')">9<br/><span class="key-alt-fn">Pg Up</span></button>
                                    </div>
                                    <div class="key">
                                        <button class="btn btn-default" type="button" ng-click="openKeyBindOptionsModal('kp_uparrow')">8<br/><span class="glyphicon glyphicon-arrow-up key-alt-fn"></span></button>
                                    </div>
                                    <div class="key">
                                        <button class="btn btn-default" type="button" ng-click="openKeyBindOptionsModal('kp_home')">7<br/><span class="key-alt-fn">Home</span></button>
                                    </div>
                                    <div class="key">
                                        <button class="btn btn-default" type="button" ng-click="openKeyBindOptionsModal('kp_rightarrow')">6<br/><span class="glyphicon glyphicon-arrow-right key-alt-fn"></span></button>
                                    </div>
                                    <div class="key">
                                        <button class="btn btn-default" type="button" ng-click="openKeyBindOptionsModal('kp_5')">5</button>
                                    </div>
                                    <div class="key">
                                        <button class="btn btn-default" type="button" ng-click="openKeyBindOptionsModal('kp_leftarrow')">4<br/><span class="glyphicon glyphicon-arrow-left key-alt-fn"></span></button>
                                    </div>
                                    <div class="key tall-key">
                                        <button class="btn btn-default" type="button" ng-click="openKeyBindOptionsModal('kp_enter')">Enter</button>
                                    </div>
                                    <div class="key">
                                        <button class="btn btn-default" type="button" ng-click="openKeyBindOptionsModal('kp_pgdn')">3<br/><span class="key-alt-fn">Pg Dn</span></button>
                                    </div>
                                    <div class="key">
                                        <button class="btn btn-default" type="button" ng-click="openKeyBindOptionsModal('kp_downarrow')">2<br/><span class="glyphicon glyphicon-arrow-down key-alt-fn"></span></button>
                                    </div>
                                    <div class="key">
                                        <button class="btn btn-default" type="button" ng-click="openKeyBindOptionsModal('kp_end')">1<br/><span class="key-alt-fn">End</span></button>
                                    </div>
                                    <div class="key">
                                        <button class="btn btn-default" type="button" ng-click="openKeyBindOptionsModal('kp_del')">.<br/><span class="key-alt-fn">Delete</span></button>
                                    </div>
                                    <div class="key wide-key">
                                        <button class="btn btn-default" type="button" ng-click="openKeyBindOptionsModal('kp_ins')">0<br/><span class="key-alt-fn">Insert</span></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>

                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8 col-sm-offset-3 col-sm-9">
                            <input id="mkgSubmitBtn" name="mkgSubmitBtn" type="submit" class="btn btn-primary" ng-click="generateBinds()" value="Generate Binds" />
                            <input id="mkgResetBtn" name="mkgResetBtn" type="reset" class="btn btn-default" ng-click="resetBinds()" value="Reset" />
                        </div>
                    </div>
                </form>

            </div>
            <div class="panel-footer" ng-show="buyBinds.length">
                <h4>Generated Buy Binds:</h4>
                <pre class="buy-binds">
                    <span ng-repeat="buyBind in buyBinds track by $index">{{ buyBind }}<br /></span>
                </pre>
            </div>
        </div>
    </div>
</div>